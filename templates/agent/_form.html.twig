{{ form_start(form) }}
   
<div class="card">
                            <div class="card-header">
                                <h4 class="card-title">Departement</h4>
                            </div>
                            <div class="card-body">
                                <div class="basic-form">
                                    
                                        <div class="form-group row">
                                            <label class="col-sm-2 col-form-label">Nom</label>
                                            <div class="col-sm-10">
                                                {{ form_widget(form.nom , {'attr' : {'class' : 'form-control','placeholder':'Le nom de l\'agent' }}) }}
                                              <span class="text-danger">{{ form_errors(form.nom) }}</span>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label class="col-sm-2 col-form-label">Prenom(s)</label>
                                            <div class="col-sm-10">
                                                {{ form_widget(form.prenom , {'attr' : {'class' : 'form-control','placeholder':'Le prenom de l\'agent'}}) }}
                                         <span class="text-danger">{{ form_errors(form.prenom) }}</span>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label class="col-sm-2 col-form-label">Date entree</label>
                                            <div class="col-sm-3">
                                                {{ form_widget(form.dateEntree , {'attr' : {'class' : 'form-control'}}) }}
                                              <span class="text-danger">{{ form_errors(form.dateEntree) }}</span>
                                            </div>
                                        </div>

                                        <div class="form-group row">
                                            <label class="col-sm-2 col-form-label">Departement</label>
                                            <div class="col-sm-10">
                                                {{ form_widget(form.departem , {'attr' : {'class' : 'form-control chosen-select'}}) }}
                                              <span class="text-danger">{{ form_errors(form.departem) }}</span>
                                            </div>
                                        </div>

                                        
                                        
                                        <div class="form-group row">
                                            <div class="col-sm-10">
                                                <button type="submit" class="btn btn-primary">Enregistrer</button>
                                            </div>
                                        </div>
                                    
                                </div>
                            </div>
                        </div>


{{ form_end(form) }}
